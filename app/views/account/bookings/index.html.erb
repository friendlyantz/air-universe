<section>
  <div class="container pt-5">
    <h4><%= current_user.first_name %>'s Dashboard</h4>

<div class="div container pt-5">
  <h2>Galaxies I booked</h2>
  <div class="row">
    <% @my_bookings.each do |booking| %> 
      <div class="div col-4">
        <div class="div card mb-4 shadow-sm rounded">
          <%= image_tag("https://images.unsplash.com/photo-1462331940025-496dfbfc7564?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1427&q=80", class: "card-img-top", alt: "...") %>
          <div class="div card-body">
            <h5 class="font-weight-bold card-title"><%= link_to booking.galaxy.name, galaxy_path(booking.galaxy) %></h5>
            <p class="small text-muted card-text"><%= booking.galaxy.description.truncate(100) %></p>
            <span class="label label-primary"><strong>Owner: </strong><%= booking.galaxy.owner.first_name %> <%= booking.galaxy.owner.last_name%></span>
            <p></p>
            <p><strong>Start date: </strong><%= booking.start_date %></p>
            <p><strong>End date: </strong><%= booking.end_date %></p>
            <p><strong>Status: </strong><%= booking.status %></p>
          </div>
          <div class="div card-footer">
            <span class="float-right">$<%= booking.galaxy.rate %>/night</span>
            <%= link_to "Cancel", booking_path(booking), method: :delete, class: "btn btn-warning" %>
          <div>
            <p></p>
                <%= link_to 'leave a review', new_account_booking_review_path(booking), class: "btn btn-primary" %>
              </div>
          </div>
    <% end %>
   </div>
  </div>

  </div>
</section>

<section>
  <div class="container pt-3">
    <ul class="nav nav-pills border-bottom pb-3">
      <li class="nav-item active">
        <%= link_to 'Bookings', account_bookings_path, class: "nav-link active" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Reservations', account_offers_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">My Galaxies</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Reviews</a>
      </li>
    </ul>
  </div>
</section>

<section>
  <div class="container pt-5">
    <div class="row">
      <% @my_bookings.each do |booking| %>
        <div class="div col-lg-4 col-md-6 col-12">
          <div class="div card rounded-top bg-transparent border-0 shadow-sm rounded-lg">
            <div class="card-header rounded-top p-0 bg-white" style="position: relative;">
              <div class="m-3 text-white" style="position: absolute; top: 0;">
                <span class="badge badge-warning small rounded-pill px-3 pb-1 margin-0"><small><%= booking.status.upcase %></small></span>
                <h6 class="mt-3 font-weight-bold"><i class="far fa-calendar-alt mr-2"></i> Jan 22 - Feb 22, 2020</h6>

                <!--
                <p><%#= booking.start_date %></p>
                <p><%#= booking.end_date %></p>
              -->

              </div>
              <div class="m-3" style="position: absolute; bottom: 0;">
                <h4 class="font-weight-bold card-title mt-3"><%= link_to booking.galaxy.name, galaxy_path(booking.galaxy), class: "text-white" %></h4>
              </div>
              <%= image_tag("https://images.unsplash.com/photo-1462331940025-496dfbfc7564?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1427&q=80", class: "card-img-top rounded-lg", alt: "...") %>
            </div>
             <div class="card-body p-2 text-white">
              <div class="text-muted">
                <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar avatar-sm" %>
                <a href="#">
                  <span class="ml-1 small font-weight-normal"><%= booking.galaxy.owner.first_name %> <%= booking.galaxy.owner.last_name%></span>
                </a>
                <span class="float-right"><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i></span>
              </div>
            </div>
            <div class="div card-body pt-1">
              <p class="small font-weight-lighter text-muted card-text"><%= booking.galaxy.description.truncate(100) %></p>
            </div>
            <div class="div card-footer border-0" style="background: #f5f5f5;">
              <span class="float-right font-weight-bold lead">$<%= booking.galaxy.rate %>/night</span>
              <%= link_to "Cancel Booking", booking_path(booking), class: "px-3 rounded-pill btn btn-danger btn-sm", method: :delete %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
