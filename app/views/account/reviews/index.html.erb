 <section>
  <div class="container pt-5">
    <h4><%= current_user.first_name %>'s Dashboard</h4>
  </div>
</section>

<section>
  <div class="container pt-3">
    <ul class="nav nav-pills border-bottom pb-3">
      <li class="nav-item active">
        <%= link_to 'Bookings', account_bookings_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Reservations', account_offers_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'My Galaxies', account_galaxies_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'My Reviews', account_reviews_path, class: "nav-link active" %>
      </li>
    </ul>
  </div>
</section>

<section>
  <div class="container pt-5">
    <div class="row">
      <% @my_reviews.each do |review| %>
        <div class="div col-lg-4 col-md-6 col-12">
          <div class="div card rounded-top bg-transparent border-0 shadow-sm rounded-lg">
            <div class="card-header rounded-top p-0 bg-white" style="position: relative;">
              <div class="m-3 text-white" style="position: absolute; top: 0;">
              


              </div>
              <div class="m-3" style="position: absolute; bottom: 0;">
                  <h6 class="mt-3 text-white font-weight-bold"><i class="far fa-calendar-alt mr-2"></i> <%= review.booking.start_date.strftime("%b %d") %> - <%= review.booking.end_date.strftime("%b %d, %Y") %> </h6>
              </div>
              <%= cl_image_tag review.booking.galaxy.photo.key, class: "card-img-top rounded-lg", alt: "..." %>
            </div>
             <div class="card-body p-2 text-white">
              <div class="text-muted">
                <%#= cl_image_tag review.owner.photo.key, class: "avatar avatar-sm" %>
                <!-- <a href="#"> -->
                  <span class="ml-1 small font-weight-normal"><%#= review.owner.first_name %> <%= link_to review.booking.galaxy.name, galaxy_path(review.booking.galaxy) %></span>
                <!-- </a> -->
                <span class="float-right"><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i></span>
              </div>
            </div>
            <div class="div card-body pt-1">
              <p class="small font-weight-lighter text-muted card-text"> Rated: <strong><%= review.rating.truncate(100) %> / 5</strong>  - <%= review.description.truncate(100) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
