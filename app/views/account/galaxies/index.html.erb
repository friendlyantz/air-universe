<section>
  <div class="container pt-5">
    <h4><%= current_user.first_name %>'s Dashboard</h4>
  </div>
</section>

<section>
  <div class="container pt-3">
    <ul class="nav nav-pills border-bottom pb-3">
      <li class="nav-item active">
        <%= link_to 'Bookings', account_bookings_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Reservations', account_offers_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to 'My Galaxies', account_galaxies_path, class: "nav-link active" %>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Reviews</a>
      </li>
    </ul>
  </div>
</section>

<section>
  <div class="container pt-5">
    <div class="row">
      <% @my_galaxies.each do |galaxy| %>
        <div class="div col-lg-4 col-md-6 col-12">
          <div class="div card rounded-top bg-transparent border-0 shadow-sm rounded-lg">
            <div class="card-header rounded-top p-0 bg-white" style="position: relative;">
              <div class="m-3 text-white" style="position: absolute; top: 0;">
              


              </div>
              <div class="m-3" style="position: absolute; bottom: 0;">
                <h4 class="font-weight-bold card-title mt-3"><%= link_to galaxy.name, galaxy_path(galaxy), class: "text-white" %></h4>
              </div>
              <%= cl_image_tag galaxy.photo.key, class: "card-img-top rounded-lg", alt: "..." %>
            </div>
             <div class="card-body p-2 text-white">
              <div class="text-muted">
                <%= cl_image_tag galaxy.owner.photo.key, class: "avatar avatar-sm" %>
                <a href="#">
                  <span class="ml-1 small font-weight-normal"><%= galaxy.owner.first_name %> <%= galaxy.owner.last_name%></span>
                </a>
                <span class="float-right"><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i></span>
              </div>
            </div>
            <div class="div card-body pt-1">
              <p class="small font-weight-lighter text-muted card-text"><%= galaxy.description.truncate(100) %></p>
            </div>
            <div class="div card-footer border-0" style="background: #f5f5f5;">
              <span class="float-right font-weight-bold lead">$<%= galaxy.rate %>/night</span>
              <%= link_to "Delete Galaxy", galaxy_path(galaxy), class: "px-3 rounded-pill btn btn-danger btn-sm", method: :delete %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
